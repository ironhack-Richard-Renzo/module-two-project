<section>
  <div class="row">
    <div class="col-12 d-flex justify-content-between align-items-center">
    <h1>Products list</h1>
    <a class="btn btn-primary" href="/products/new"><i class="fa fa-plus"></i></a>
    </div>
  </div>

  <hr class="mt-0"/>

  {{#if products}}
    <div class="card-columns">
      {{#each products as |post| }}
        <div class="card mb-3">
          <img class="card-img-top" src="{{ post.image }}" alt="{{ post.name }}">
          <div class="card-body">
            <h5 class="card-name">
              <a href="/products/{{post.id}}">{{ post.name }}</a>
            </h5>
        
            <p class="card-text">{{#limitChars 100}}{{ post.description }}{{/limitChars}}</p>
          </div>
          <div class="card-footer d-flex justify-content-between">
            <a class="btn btn-primary" href="/products/{{ post.id }}/edit"><i class="fa fa-edit"></i></a>
            <form action="/products/{{post.id}}/delete" method="POST">
              <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o"></i></button>
            </form>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
  
</section>

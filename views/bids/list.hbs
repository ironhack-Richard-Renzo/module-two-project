<section class="product-title">
  {{!-- TO DO: Cambiar el nombre del titulo cuando se filtra por categoria --}}
  <h1>Bid listing</h1>
  <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt.</p>
</section>
<form action="/bids" method="get" >
  <label for="distance">Bid distance: </label>
  <input type="range" max="100000" min="0" step="100" value="5000" name="distance">
  <button type="submit">Search</button>
</form>

<section>
  {{#if bids}}
    <div class="bid-grid">
      {{#each bids as |bid| }}
        <div class="bid">
          <div class="bid-header">
            <h2>{{ bid.title }}</h2>
            <small>From: {{ bid.author }}</small>
          </div>
          <img class="card-img-top" src="{{ bid.image }}" alt="{{ bid.title }}">
          <div class="bid-info">
            <p class="bid-desc">{{#limitChars 100}}{{ bid.description }}{{/limitChars}}</p>
            <small>XXkm of you</small>
          </div>
          <div class="rip"></div>
          <div class="bid-footer">
            <a href="/bids/{{bid.id}}">Take the bid</a>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</section>

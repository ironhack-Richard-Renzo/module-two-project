<div class="login-content">
  <div class="login-background">
    <h1 style="font-size:60px;">Welcome to Module2</h1>
    <p>hello</p>
  </div>
  <div>
    <h2>Sign In</h2>
    <form action="/register" method="post" class="login-form">
      <input type="text" name="email" placeholder="user@example.com" value="{{ user.email }}">
      <input type="password" name="password" placeholder="Password">
      <button type="submit">Continue</button>
    </form>
    <hr>
    <a href="/login">Are you registered?</a>
  </div>
</div>

